<div id="<%= dom_id post %>">
  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>

  <p>
    <strong>View count:</strong>
    <%= post.view_count %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= post.rating %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

</div>
